
public aspect AuditAspect {

	public pointcut accountOperation() : call (* Account.*(..)) ;
	public pointcut accountExecution() : execution (* Account.*(..)) ;
	
	before() : accountOperation() {
		Object target = thisJoinPoint.getTarget();
		System.out.println("Before: " + thisJoinPoint + " Target: " + target ) ;
	}
	
	after() : accountExecution() {
		Object target = thisJoinPoint.getTarget();
		System.out.println("After: " + thisJoinPoint + " Target: " + target ) ;
	}
		
}
